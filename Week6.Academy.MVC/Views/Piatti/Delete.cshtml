@model PiattiViewModel

<h1>Sei sicuro di voler eliminare questo piatto? </h1>
<br />
<hr />
<form method="post">
    <div class="form-group">
        <label asp-for="Id">Nome del piatto</label>
        <input asp-for="Id" class="form-control" readonly />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nome">Nome del piatto</label>
        <input asp-for="Nome" class="form-control" readonly />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descrizione"></label>
        <input asp-for="Descrizione" class="form-control" readonly />
        <span asp-validation-for="Descrizione" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tipologia"></label>
        <select asp-for="Tipologia" asp-items="@ViewBag.Tipologia" class="form-control">
            <option value="">Selezionare un'opzione...</option>
        </select>
        <span asp-validation-for="Tipologia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Prezzo">Prezzo del piatto</label>
        <input asp-for="Prezzo" class="form-control" readonly />
        <span asp-validation-for="Prezzo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdMenu">Appartiene al menu con ID:</label>
        <input asp-for="IdMenu" class="form-control" readonly />
        <span asp-validation-for="IdMenu" class="text-danger"></span>
    </div>
    <input type="submit" value="Si,elimina" class="btn btn-warning" />
    <a class="btn btn-primary" asp-controller="Prodotti" asp-action="Index" role="button">Indietro</a>
</form>
