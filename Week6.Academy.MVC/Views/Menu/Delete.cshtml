@model MenuViewModel


<h1>Sei sicuro di voler eliminare il menu?</h1>
<br />
<hr />
<form method="post">
    <div class="form-group">
        <label asp-for="Id">Id menu</label>
        <input asp-for="Id" class="form-control" readonly />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nome">Nome del menu</label>
        <input asp-for="Nome" class="form-control" readonly />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <input type="submit" value="Si,elimina" class="btn btn-warning" />
    <a class="btn btn-primary" asp-controller="Prodotti" asp-action="Index" role="button">Indietro</a>
</form>

